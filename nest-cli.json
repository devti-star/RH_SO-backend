{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": [
      {
        "include": "**/*.hbs",
        "outDir": "dist"
      },
      {
        "include": "mail/templates/assets/**/*",
        "outDir": "dist"
      }
    ],
    "deleteOutDir": true
  }
}